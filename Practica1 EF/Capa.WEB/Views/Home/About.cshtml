@model List<Capa.WEB.Models.Categories>




<h2 aling="center">@ViewBag.Title Categorias</h2>
<div class="jumbotron justify-content-center">
    <h3 align="center">Lab C# APPWEB</h3>
    <table class="table table-bordered" >
        <tr><img src="~/Content/img/Add.png" /> Agregar una nueva Categoria </tr>
        <thead>
        <td></td>
        <td>ID</td>
        <td>Nombre  </td>
        <td> Descripcion</td>
        <td>Imagen</td>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td style="text-align">


                        <img src="~/Content/img/Edit.png" />
                        <img src="~/Content/img/Remove.png" />
                    </td>
                    <td>@item.CategoryID</td>
                    <td>@item.CategoryName</td>
                    <td>@item.Description</td>
                    <td><img src="@item.Picture" alt="Imagen de @item.CategoryName" /></td>
                </tr>
}
        </tbody>
    </table>
</div>
