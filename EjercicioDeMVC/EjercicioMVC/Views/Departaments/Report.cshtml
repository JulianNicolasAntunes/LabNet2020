
@{
    ViewBag.Title = "Report";
}

<section class="call-to-action text-white text-center">
    <div class="text-center ">
        <h2>Report Departaments </h2>
        <h3> @DateTime.Now.Day /@DateTime.Now.Month /@DateTime.Now.Year </h3>
    </div>
</section>

<div class="btn-light blockquote text-center">
    <br />
    <div class="container">
        <div class="form-row">
            <div class="col-md-6 mx-auto">
                <a class="btn btn-block btn-lg btn-outline-primary" href="@Url.Content("~/Departaments/Print ")">Report</a>
            </div>
        </div>
    </div>
</div>
<table class="table">
    <tr class="btn-primary">
        <td></td>
        <td>ID</td>
        <td>Department Name</td>
        <td>Location ID</td>
        <td>Department Description</td>
   

    </tr>
    @foreach (var depto in Model)
    {
        <tr class="btn-light">
            <td></td>
            <td>@depto.ID</td>
            <td>@depto.DEPARTMENT_NAME</td>
            <td>@depto.LOCATION_ID</td>
            <td>@depto.DEPARTMENT_DESCRIPTION</td>

        </tr>
    }
</table>