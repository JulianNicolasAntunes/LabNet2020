@model  EjercicioMVC.Entity.DEPARTMENTS
@{
    ViewBag.Title = "Insert Departments";
}

@using (Html.BeginForm("Insertar", "Departaments", FormMethod.Post))
{<body>
     <div class="container">


         <div class="row no-gutters">

             <div class="col-lg-6 order-lg-1 my-auto showcase-text">
                 <h2>Create a new department </h2>
                 <p class="lead mb-0">We are always looking to create new departments!</p>
                 
             </div>
             <img src="@Url.Content("~/Content/img/city.png")" alt="">
         </div>

         <div><br /><h5>Department Name</h5> @Html.TextBoxFor(r => r.DEPARTMENT_NAME, new { required = "required" })</div>
         <div><br /><h5>Department Description</h5> @Html.TextBoxFor(r => r.DEPARTMENT_DESCRIPTION)</div>
         <div>
             <br /><h5>Location ID<</h5>
             <select class="col-form-label" @Html.TextBoxFor(r => r.LOCATION_ID)>
                 <option value=""> </option>
                 <option value="1">1</option>
                 <option value="2">2</option>
                 <option value="3">3</option>
             </select>
         </div>
         <br />
         <input class=" col-12 col-md-3 btn btn-block btn-lg btn-outline-primary" type="submit" name="Save" value="Save " />

     </div>
</body>
}
