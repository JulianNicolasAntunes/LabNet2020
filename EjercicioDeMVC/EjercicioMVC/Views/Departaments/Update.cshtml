@model  EjercicioMVC.Entity.DEPARTMENTS
@{
    ViewBag.Title = "Update Departments";
}

<h2>Actualizar deptos</h2>

@using (Html.BeginForm("Update", "Departaments", FormMethod.Post))
{
<body>
    <div class="row no-gutters">

        <div class="col-lg-6 order-lg-1 my-auto showcase-text">
            <h2>Update a department!</h2>
        </div>
    </div>
    <div>
    
        <div><h5>Department Name</h5> @Html.TextBoxFor(r => r.DEPARTMENT_NAME)</div>
        <div><br /><h5>Location ID</h5> @Html.TextBoxFor(r => r.LOCATION_ID)</div>
        <div><br /><h5>Department Description</h5> @Html.TextBoxFor(r => r.DEPARTMENT_DESCRIPTION)</div>
        <br />
        <input class=" col-12 col-md-3 btn btn-block btn-lg btn-outline-success" type="submit" name="Save" value="Save " />

    </div>
</body>
}


