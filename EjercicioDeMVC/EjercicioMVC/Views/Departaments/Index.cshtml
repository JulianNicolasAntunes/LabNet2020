@model List<EjercicioMVC.Entity.DEPARTMENTS>
@{
    ViewBag.Title = "iPeople - Departaments";
}

<!-- Masthead -->
<body>
    <header class="masthead text-white text-center">
        <div class="testimonial-item mx-auto mb-5 mb-lg-0">

            <img class="@Url.Content("~/Content/img-fluid rounded-circle mb-3")" src="@Url.Content("~/Content/img/peoplelogo.png")" alt="">
        </div>

        <div class="overlay"></div>
        <div class="container">
            <div class="row">
                <div class="col-xl-9 mx-auto">
                    <h1 class="mb-5">departments </h1>
                </div>

                <div class="col-md-10 col-lg-8 col-xl-7 mx-auto">
                    <form>
                        <div class="form-row">
                            <div class="col-12 col-md-9 mb-2 mb-md-0">
                                <input type="text" class="form-control form-control-lg" placeholder="Find a department...">
                            </div>
                            <div class="col-12 col-md-3">
                                <button type="submit" class="btn btn-block btn-lg btn-primary">Search!</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </header>
    <div class="btn-light">
        <br />
        <div class="container">
            <div class="form-row">
                <div class="col-md-6 mx-auto">
                    <a class="btn btn-block btn-lg btn-outline-primary" href="@Url.Content("~/Departaments/Insertar ")">Insert</a>
                </div>
                <br />
            </div>
        </div>
    </div>

            <table class="table">
                <tr class="btn-primary">
                    <td></td>
                    <td>ID</td>
                    <td>Department Name</td>
                    <td>Location ID</td>
                    <td>Department Description</td>
                    <td>Accion</td>

                </tr>
                @foreach (var depto in Model)
                {
                    <tr class="btn-light">
                        <td></td>
                        <td>@depto.ID</td>
                        <td>@depto.DEPARTMENT_NAME</td>
                        <td>@depto.LOCATION_ID</td>
                        <td>@depto.DEPARTMENT_DESCRIPTION</td>
                        <td class=" btn-block">
                            @Html.ActionLink("Delete", "Delete", new { id = depto.ID }, new { onclick = "return confirm('Are you sure you want to remove the selected item from the list?')" })>
                            <br />
                            @Html.ActionLink("Update", "Update", new { id = depto.ID }, new { onclick = "return confirm('Are you sure you want to remove the selected item from the list?')" })>

                        </td>

                    </tr>
                }
            </table>


</body>


