@model List<EjercicioMVC.Entity.LOCATIONS>

@{
    ViewBag.Title = "iPeople - Locations";
}
<body>
    <!-- Masthead -->
    <header class="masthead text-white text-center">
        <div class="testimonial-item mx-auto mb-5 mb-lg-0">

            <img class="@Url.Content("~/Content/img-fluid rounded-circle mb-3")" src="@Url.Content("~/Content/img/peoplelogo.png")" alt="">
        </div>

        <div class="overlay"></div>
        <div class="container">
            <div class="row">
                <div class="col-xl-9 mx-auto">
                    <h1 class="mb-5">Locations</h1>
                </div>

                <div class="col-md-10 col-lg-8 col-xl-7 mx-auto">
                    <form>
                        <div class="form-row">
                            <div class="col-12 col-md-9 mb-2 mb-md-0">
                                <input type="text" class="form-control form-control-lg" placeholder="Find a location...">
                            </div>
                            <div class="col-12 col-md-3">
                                <button type="submit" class="btn btn-block btn-lg btn-primary">Search!</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </header>
    <div class="btn-light">
        <br />
        <div class="container">
            <div class="form-row">
                <div class="col-lg-6">
                    <a class="btn btn-block btn-lg btn-outline-primary" href="@Url.Content("~/Location/Insertar ")">Insert</a>
                </div>
                <div class="col-lg-6">
                    <a class="btn btn-block btn-lg btn-outline-secondary" href="@Url.Content("~/Location/Actualizar ")">Update</a>
                </div>
          
            </div>
        </div>
        <br />
    </div>
    <table class="table">
        <tr class="btn-primary">
            <td>ID</td>
            <td>City</td>
            <td>Accion</td>
        </tr>
        @foreach (var local in Model)
        {
    <tr class="btn-light">
        <td>@local.ID</td>
        <td>@local.CITY</td>
        <td class="btn-link">@Html.ActionLink("Eliminar", "Delete", "Region", new { id = local.ID })</td>

    </tr>
        }
    </table>
</body>

