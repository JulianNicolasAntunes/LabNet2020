@model List<EjercicioMVC.Entity.LOCATIONS>

@{
    ViewBag.Title = "iPeople - Locations";
}
<body>
    <!-- Masthead -->
    <header class="masthead text-white text-center">
        <div class="testimonial-item mx-auto mb-5 mb-lg-0">

            <img class="@Url.Content("~/Content/img-fluid rounded-circle mb-3")" src="@Url.Content("~/Content/img/peoplelogo.png")" alt="">
        </div>
        <div class="overlay"></div>
        <div class="container">
            <div class="row">
                <div class="col-xl-9 mx-auto">
                    <h1 class="mb-5">Locations</h1>
                </div>
                <div class="col-md-10 col-lg-8 col-xl-7 mx-auto">
                    <form>
                        <div class="form-row">
                            <div class="col-12 col-md-9 mb-2 mb-md-0">
                                <input type="text" class="form-control form-control-lg" placeholder="Find a location...">
                            </div>
                            <div class="col-12 col-md-3">
                                <button type="submit" class="btn btn-block btn-lg btn-primary">Search!</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </header>
    <div class="btn-light">
        <br />
        <div class="container">
            <div class="form-row">
                <div class="col-md-6 mx-auto">
                    <a class="btn btn-block btn-lg btn-outline-primary" href="@Url.Content("~/Location/Insertar ")">Insert</a>
                </div>
            </div>
        </div>
    </div>
        <table class="table">
            <tr class="btn-primary">
                <td></td>
                <td>ID</td>
                <td>City</td>
                <td></td>
                <td>Accion</td>
                <td></td>
            </tr>
            @foreach (var local in Model)
            {
                <tr class="btn-light">
                    <td></td>
                    <td>@local.ID</td>
                    <td>@local.CITY</td>
                    <td></td>
                    <td class="btn-outline-light">
                        @Html.ActionLink("Delete", "Delete", new { id = local.ID }, new { onclick = "return confirm('Are you sure you want to remove the selected item from the list?')" })>
                        <br />
                        @Html.ActionLink("Update", "Update", new { id = local.ID }, new { onclick = "return confirm('Are you sure you want to update the selected item from the list?')" })>
                 
                    </td>
                    <td></td>
                </tr>
            }
        </table>
</body>

